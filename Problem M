const int mx = 55;
const ll mod = 998244353;
const ll inf = 1e15;

void run_case(){
    int n;cin >> n;
    string s;cin >> s;
    set<char> se;
    bool ok = 1;
    for(char c : s){
        if(c != '.')se.insert(c);
    }
    for(int i = 0; i < n-1;i++){
        if(s[i] == s[i+1] && s[i] != '.')ok = 0;
    }
    if(!ok){
        cout << -1 << endl;
        return;
    }
    if(se.size() >= 3){
        cout << se.size() << endl;
        return;
    }
    if(se.size() == 1 && n == 1){
        cout << 1 << endl;return;
    }
    vii v;
    for(int i = 0; i < n;){
        while(i < n && s[i] != '.'){
            i++;
        }
        int start = i;
        while(i < n && s[i] == '.'){
            i++;
        }
        v.pb({start, i-1});
    }
    for(pii p : v){
        if(p.ff == 0 || p.ss == n-1)continue;
        if(s[p.ff-1] == s[p.ss+1] && ((p.ss-p.ff+1) % 2 == 0)){

            ok = 0;
        }
        if(s[p.ff-1] != s[p.ss+1] && ((p.ss-p.ff+1) % 2 == 1)){
            ok = 0;
        }
    }
    if(ok){
        cout << 2 << endl;
    }
    else{
        cout << 3 << endl;
    }
}

int main(){
    //ofstream fout ("guard.out");
    //ifstream fin ("guard.in");
    init();
    speed;
    //sieve(mx);
    int t;
    //cin >> t;
    t = 1;
    while(t--){
        run_case();
    }
}

